<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="#3E3E3E"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTipoIngresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/inteira"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtValorIngresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/precoing"
                android:textColor="#FF6666"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTipoIngresso" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:outlineProvider="none"
                app:cardBackgroundColor="@color/fundologin"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:outlineProvider="none"
                        app:cardBackgroundColor="#00FFFFFF" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:outlineProvider="none"
                            app:cardBackgroundColor="#00FFFFFF" />

                        <ImageView
                            android:id="@+id/imgMenos"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0"
                            android:scaleType="fitStart"
                            app:srcCompat="@drawable/icons8_minus_96" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:outlineProvider="none"
                            app:cardBackgroundColor="#00FFFFFF" />

                        <TextView
                            android:id="@+id/txtQtdTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:fontFamily="@font/poppins"
                            android:text="0"
                            android:textColor="#FFFFFF" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:outlineProvider="none"
                            app:cardBackgroundColor="#00FFFFFF" />

                        <ImageView
                            android:id="@+id/imgMais"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0"
                            android:scaleType="fitStart"
                            app:srcCompat="@drawable/icons8_plus_96" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:outlineProvider="none"
                            app:cardBackgroundColor="#00FFFFFF" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:outlineProvider="none"
                        app:cardBackgroundColor="#00FFFFFF" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

